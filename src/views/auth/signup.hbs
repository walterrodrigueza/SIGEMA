<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Registro</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
           
            <div class="form-group">
              <input type="text" name="id_usuario" placeholder="id Usuario" maxlength = "50" class="form-control" required autofocus>
            </div>
            <div class="form-group">
              <input type="password" name="contraseña" placeholder="Contraseña" maxlength = "60" class="form-control" required>
            </div>
             <div class="form-group">
              <input type="text" name="nombre" placeholder="Nombre" maxlength = "50" class="form-control" required >
            </div>
             <div class="form-group">
              <input type="text" name="primer_apellido" placeholder="Primer Apellido" maxlength = "50" class="form-control" required >
            </div>
             <div class="form-group">
              <input type="text" name="segundo_apellido" placeholder="Segundo Apellido" maxlength = "50" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="email" name="correo" placeholder="Correo" maxlength = "50" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="number" name="tel_oficina" placeholder="Tel. Oficina" min="10000000" max="99999999" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="number" name="tel_celular" placeholder="Tel. Celular" min="10000000" max="99999999" class="form-control" required>
            </div>
            <div class="form-group"></div>
              Seleccione un rol:
                <select id="rol" name="rol">
                  {{#each rol}}
                    <option value="{{id_Rol}}">{{Descripcion}} </option>
                  {{/each}}                  
                </select>
            </div>

            {{!--
            
            <div class="form-group">
              <input type="text" name="username" placeholder="Username" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            
              --}}
            
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Registrar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>