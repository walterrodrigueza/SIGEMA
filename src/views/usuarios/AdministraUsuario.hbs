
<div class="container p-6">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <HR width="50%">
      <div class="card text-center">
        <div class="card-header ">
          <h3>
              <a href="/usuarios/Administrar" class="navbar-brand mx-auto">Administra {{usuario.id_usuario}}</a>
          </h3>
        </div>

        <div class="card-body">
          <form action="/usuarios/Administrar_modifica_usuario" method="POST">                     
            
            <div class="row">
              <div class="col-md-4">
                Usuario:
              </div>
              <div class="col-md-8">
                <input type="text" name="id_usuario" placeholder="id Usuario"  value={{usuario.id_usuario}} maxlength = "50"  class="form-control" autocomplete="off" readonly required autofocus>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 align-bottom">
                Nombre:
              </div>
              <div class="col-md-8">
                <input type="text" name="nombre" placeholder="Nombre" value={{usuario.Nombre}} maxlength = "50" class="form-control" required >
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                Primer apellido:
              </div>
              <div class="col-md-8">
                <input type="text" name="primer_apellido" placeholder="Primer Apellido" value={{usuario.Apellido1}} maxlength = "50" class="form-control" required >
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                Segundo apellido:
              </div>
              <div class="col-md-8">
                <input type="text" name="segundo_apellido" placeholder="Segundo Apellido" value={{usuario.Apellido2}} maxlength = "50" class="form-control" required>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                Correo:
              </div>
              <div class="col-md-8">
                <input type="email" name="correo" placeholder="Correo" value={{usuario.Correo}} maxlength = "50" class="form-control" required>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                Tel. Oficina
              </div>
              <div class="col-md-8">
                <input type="number" name="tel_oficina" placeholder="Tel. Oficina" value={{usuario.Tel_Oficina}} min="10000000" max="99999999" class="form-control" required>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                Tel. Celular
              </div>
              <div class="col-md-8">
                <input type="number" name="tel_celular" placeholder="Tel. Celular" value={{usuario.Tel_Celular}} min="10000000" max="99999999" class="form-control" required>
              </div>
            </div>

            <HR>
            <div class="row">
              <div class="col-md-12">
                <td>
                  <button class="btn btn-success btn-block" formmethod="post">Guardar cambios</button>
                </td>
              </div> 
            </div>
          </form>      




          <form action="/usuarios/Administrar_agrega_rol" method="POST">          

            <div class="row">
              <div class="col-md-12">
                <HR width="100%">
                Roles
                
              </div>
            </div>

            <div class="row">
              <div class="col-md-5">
                Existentes
                <select name="rol" class="custom-select" size="4">
                  {{#each roles}}
                  <option value="{{id_Rol}}">{{Descripcion}}</option>
                  {{/each}}                   
                </select>

              </div>
              <div class="col-md-2">
                <div class="text-center">
                  <HR width="0%">
                  <button class="btn btn-success" formmethod="post" onmouseover="myScript">+</button>
                </div>
                <div class="row">
                  <HR width="10%">
                </div>
          </form>

          <form action="/usuarios/Administrar_quita_rol" method="POST">
                
                <div class="text-center">
                  <button class="btn btn-danger" formmethod="post">-</button>
                </div>
              </div>
              <div class="col-md-5">
                Asignados
                <select name="rol2" class="custom-select" size="4">
                  {{#each roles_usuario}}
                  <option value="{{id_Rol}}">{{Descripcion}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
          </form>

          
        </div>        
               
      </div>
    </div>
  </div>
</div>


<script>
  //Si el titulo del mensaje es diferente de 0, envia un mensaje de creacción exitosa
  if ('{{mensaje.titulo}}'!='0'){
    // Envía mensaje via swal
    mensaje('{{mensaje.titulo}}','{{mensaje.detalle}}','{{mensaje.type}}');
  }

  
</script>